{
  "name": "@bloopjs/web",
  "version": "0.0.0",
  "author": "Neil Sarkar",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloopgames/bloop"
  },
  "exports": {
    ".": {
      "import": "./src/mod.ts",
      "types": "./src/mod.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/mod.ts --outdir=dist --sourcemap=linked && bunx tsc -p publish/tsconfig.publish.json",
    "ci:jsr": "bunx jsr publish --dry-run --allow-dirty",
    "ci:tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@bloopjs/bloop": "workspace:*",
    "@bloopjs/engine": "workspace:*",
    "@preact/signals": "^1.3.1",
    "partysocket": "^1.1.6",
    "preact": "^10.25.4"
  }
}
