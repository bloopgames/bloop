{
  "name": "@bloopjs/engine",
  "version": "0.0.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "js",
    "wasm"
  ],
  "exports": {
    ".": {
      "import": "./js/mod.ts",
      "types": "./js/mod.ts"
    }
  },
  "scripts": {
    "build": "bun run build:wasm && bun build js/mod.ts --outdir=dist --sourcemap=linked && bun run build:tsc",
    "build:tsc": "tsc -p publish/tsconfig.publish.json",
    "build:wasm": "zig build -p .",
    "ci:tsc": "tsc --noEmit",
    "check:wasm": "wasm-objdump -x wasm/bloop.wasm",
    "dev": "zig build -p . --watch"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
