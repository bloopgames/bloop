{
  "name": "@bloopjs/bloop",
  "version": "0.0.0",
  "author": "Neil Sarkar",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloopgames/bloop"
  },
  "exports": {
    ".": {
      "import": "./src/mod.ts",
      "types": "./src/mod.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "details.md",
    "why.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/mod.ts --outdir=dist --sourcemap=linked && bun run build:tsc",
    "build:tsc": "tsc -p publish/tsconfig.publish.json",
    "ci": "bun run ci:tsc && bun run ci:jsr && bun run build",
    "ci:tsc": "tsc --noEmit",
    "ci:jsr": "bunx jsr publish --dry-run --allow-dirty",
    "dev": "bun --watch src/mod.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@bloopjs/engine": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
