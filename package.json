{
  "name": "bloop",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "games/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "ci": "bun run ci:tsc && bun test",
    "ci:tsc": "bun run --filter '*' ci:tsc",
    "ci:jsr": "(cd packages/engine && bun run ci:jsr) && (cd packages/bloop && bun run ci:jsr) && (cd packages/web && bun run ci:jsr)",
    "publish": "bun bin/publish.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
